{
    // Formatting
    "editor.formatOnSave": true,
    "editor.indentSize": 4,
    "editor.tabSize": 4,
    "javascript.format.semicolons": "insert",
    "typescript.format.semicolons": "insert",
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": false
    },
    "editor.detectIndentation": false,
    // Extension: Prettier
    "prettier.tabWidth": 4,
    "prettier.semi": true,
    // Extension: Better Comments
    "better-comments.multilineComments": true,
    "better-comments.tags": [
        {
            "tag": "!",
            "color": "#FF2D00",
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false,
            "strikethrough": false
        },
        {
            "tag": "?",
            "color": "#3498DB",
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false,
            "strikethrough": false
        },
        {
            "tag": "//",
            "color": "#474747",
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false,
            "strikethrough": true
        },
        {
            "tag": "todo",
            "color": "#FF8C00",
            "backgroundColor": "transparent",
            "bold": false,
            "italic": false,
            "strikethrough": false
        },
        {
            "tag": "*",
            "color": "#98C379",
            "backgroundColor": "transparent",
            "bold": true,
            "italic": false,
            "strikethrough": false
        },
        {
            "tag": "- ",
            "color": "hsl(180, 100%, 48%)",
            "backgroundColor": "transparent",
            "bold": true,
            "italic": true,
            "strikethrough": false
        }
    ],
    "cSpell.words": [
        "abaya",
        "abhi",
        "alia",
        "azad",
        "bluebtn",
        "btns",
        "Downvote",
        "downvoted",
        "downvotes",
        "fakestackoverflow",
        "getvotes",
        "hamkalo",
        "ihba",
        "isnt",
        "Ivvl",
        "Joji",
        "Kstvx",
        "mackson",
        "Prefrence",
        "qcnt",
        "qlist",
        "signup",
        "testdev",
        "tovote",
        "upvote",
        "upvoted",
        "upvotes"
    ]
}
